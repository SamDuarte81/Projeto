<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.controllers.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="700.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #e0f2fe, #ffffff);">
            <children>

                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6366f1;" text="Make Muscle" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6366f1;" text="Ficha de Treino" />


                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;" text="LOGIN" />

                <!-- Tipo de usuário -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <RadioButton fx:id="treinadorRadio" selected="true" style="-fx-font-size: 14px;" text="Treinador">
                            <toggleGroup>
                                <ToggleGroup fx:id="userTypeGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="clienteRadio" style="-fx-font-size: 14px;" text="Cliente" toggleGroup="$userTypeGroup" />
                    </children>
                </HBox>

                <!-- Campos do formulário -->
                <VBox alignment="CENTER" maxWidth="300.0" spacing="15.0">
                    <children>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e5e7eb; -fx-background-radius: 8; -fx-padding: 12;">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="📧" />
                                <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                            </children>
                        </HBox>


                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e5e7eb; -fx-background-radius: 8; -fx-padding: 12;">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="🔒" />
                                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                                <TextField fx:id="passwordVisible" managed="false" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: transparent;" visible="false" />
                                <Button fx:id="togglePasswordBtn" onAction="#togglePasswordVisibility" prefHeight="27.0" prefWidth="48.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="👁" />
                            </children>
                        </HBox>
                    </children>
                </VBox>


                <Button fx:id="loginBtn" onAction="#handleLogin" prefWidth="200.0" style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 12;" text="Continue" />


                <Label fx:id="switchToCadastroLink" style="-fx-text-fill: #6366f1; -fx-underline: true; -fx-cursor: hand;" text="Cadastrar" />
            </children>
        </VBox>
    </children>
</AnchorPane>
