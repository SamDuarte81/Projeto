<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #e0f2fe, #ffffff);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.controllers.ExerciciosController">
    <children>
        <!-- Header Principal -->
        <VBox spacing="20" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 3);">
            <padding>
                <Insets bottom="20" left="30" right="30" top="25" />
            </padding>

            <!-- Título e Navegação -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <children>
                    <VBox spacing="5">
                        <children>
                            <Label fx:id="tituloLabel" text="Exercícios" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #6366f1;">
                                <font>
                                    <Font name="System Bold" size="28.0" />
                                </font>
                            </Label>
                            <Label fx:id="contadorLabel" text="Exercícios selecionados: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                        </children>
                    </VBox>

                    <!-- Região flexível para empurrar o botão voltar para direita -->
                    <Region HBox.hgrow="ALWAYS" />

                    <!-- Botão Voltar -->
                    <Button fx:id="voltarButton" text="⬅️ Voltar" style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-cursor: hand;" prefWidth="120" prefHeight="40">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Barra de Ações -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <children>
                    <!-- Cards de ação com ícones -->
                    <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #f3f4f6; -fx-background-radius: 12; -fx-padding: 12 18 12 18; -fx-cursor: hand; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-border-width: 1;">
                        <children>
                            <Label text="📋" style="-fx-font-size: 16px;" />
                            <Button fx:id="divisoesTreinoButton" text="Divisões de Treino" style="-fx-background-color: transparent; -fx-text-fill: #374151; -fx-font-size: 13px; -fx-font-weight: bold; -fx-border-color: transparent;" prefHeight="30">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                            </Button>
                        </children>
                    </HBox>

                    <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #fef3f2; -fx-background-radius: 12; -fx-padding: 12 18 12 18; -fx-cursor: hand; -fx-border-color: #fecaca; -fx-border-radius: 12; -fx-border-width: 1;">
                        <children>
                            <Label text="🗑️" style="-fx-font-size: 16px;" />
                            <Button fx:id="limparSelecaoButton" text="Limpar Seleções" style="-fx-background-color: transparent; -fx-text-fill: #dc2626; -fx-font-size: 13px; -fx-font-weight: bold; -fx-border-color: transparent;" prefHeight="30">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                            </Button>
                        </children>
                    </HBox>

                    <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #f0fdf4; -fx-background-radius: 12; -fx-padding: 12 18 12 18; -fx-cursor: hand; -fx-border-color: #dcfce7; -fx-border-radius: 12; -fx-border-width: 1;">
                        <children>
                            <Label text="🖨️" style="-fx-font-size: 16px;" />
                            <Button fx:id="imprimirButton" text="Imprimir" style="-fx-background-color: transparent; -fx-text-fill: #16a34a; -fx-font-size: 13px; -fx-font-weight: bold; -fx-border-color: transparent;" prefHeight="30">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                            </Button>
                        </children>
                    </HBox>
                </children>
            </HBox>

            <!-- Separador visual -->
            <Separator style="-fx-background-color: #e5e7eb;" />
        </VBox>

        <!-- Container Principal dos Exercícios -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <!-- Container com fundo branco e bordas arredondadas -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                    <VBox.margin>
                        <Insets bottom="20" left="20" right="20" top="10" />
                    </VBox.margin>
                    <children>
                        <VBox fx:id="exerciciosContainer" spacing="12">
                            <padding>
                                <Insets bottom="25" left="25" right="25" top="25" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Footer com dicas -->
        <HBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 8, 0, 0, -2);">
            <padding>
                <Insets bottom="15" left="30" right="30" top="15" />
            </padding>
            <children>
                <!-- Card de dica -->
                <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #eff6ff; -fx-background-radius: 10; -fx-padding: 12 20 12 20; -fx-border-color: #dbeafe; -fx-border-radius: 10; -fx-border-width: 1;">
                    <children>
                        <Label text="💡" style="-fx-font-size: 16px;" />
                        <Label text="Dica: Use as divisões de treino para seleções rápidas!" style="-fx-text-fill: #1e40af; -fx-font-size: 13px; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>

    </children>
</VBox>